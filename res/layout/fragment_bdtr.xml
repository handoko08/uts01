<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
        <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Mengerjakan soal nya dengan baik~"
         />
        
            <TextView
        android:id="@+id/bdtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Sebuah persegi ABCD memiliki sisi 5 cm, tentukan luas bangun tersebut !"
        android:layout_below="@+id/intro"
        />
                <EditText 
        android:id="@+id/etbdtr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Jawaban anda"
        android:layout_below="@+id/bdtr"
        />
                    <Button
        android:id="@+id/btnbdtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/etbdtr"
        />
    

</RelativeLayout>
